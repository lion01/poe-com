<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="userinfo" label="COM_POECOM_USER_BT_LBL"
            addfieldpath="/administrator/components/com_poecom/models/fields"
	>
        <field name="email1" type="email"
            field="id"
            filter="string"
            label="COM_POECOM_USER_EMAIL1_LABEL"
            message="COM_POECOM_USER_EMAIL1_LABEL_MESSAGE"
            required="true"
            size="30"
            unique="true"
            validate="email"
            onchange="checkName()"
            class="rounded"
        />
        <field name="email2" type="email"
            field="email1"
            filter="string"
            label="COM_POECOM_USER_EMAIL2_LABEL"
            message="COM_POECOM_USER_EMAIL2_LABEL_MESSAGE"
            required="true"
            size="30"
            validate="equals"
            onchange="validateEmail()"
            class="rounded"
        />
        <field name="fname"
            type="text"
            label="COM_POECOM_USER_FNAME_LABEL"
            size="30"
            required="true"
            class="rounded"
        />
        <field name="lname"
            type="text"
            label="COM_POECOM_USER_LNAME_LABEL"
            size="30"
            required="true"
            class="rounded"
        />
        <field name="street1"
            type="text"
            label="COM_POECOM_USER_STREET1_LABEL"
            size="30"
            required="true"
            class="rounded"
        />
        <field name="street2"
            type="text"
            label="COM_POECOM_USER_STREET2_LABEL"
            size="30"
            class="rounded"
        />
        <field name="city"
            type="text"
            label="COM_POECOM_USER_CITY_LABEL"
            size="30"
            required="true"
            class="rounded"
        />
        <field name="country_id"
            type="countrylist"
            enabled="1"
            default="222"
            label="COM_POECOM_USER_COUNTRY_LABEL"
            onchange="updateRegions()"
            required="true"
            allowedonly="1"
            />
        <field name="region_id"
            type="regionlist"
            countryid="222"
            label="COM_POECOM_USER_REGION_LABEL"
            required="true"
        />
        <field name="postal_code"
            type="text"
            label="COM_POECOM_USER_POSTAL_LABEL"
            size="10"
            required="true"
            class="rounded"
        />
        <field name="telephone"
            type="tel"
            label="COM_POECOM_USER_TELEPHONE_LABEL"
            size="30"
            required="true"
            class="rounded"
	/>
	</fieldset>
</form>
