<div class="flyer-item" style="margin: 0;">
    <div class="flyer-title">{productname}</div>
    <div class="flyer-img"><img alt="{productname}" src="{productimage}" />
    </div>
    <div class="flyer-desc">
        <dl>
            {productproperties}
        </dl>
    </div>
    <div class="flyer-price-bottom">
        <div class="flyer-price-row-bottom">
            <div class="flyer-price-text">{productpricetext}</div>
            <div class="flyer-price">${productprice}</div>
            <div class="flyer-price-atc">{productatc}</div>
        </div>
    </div>
</div>
