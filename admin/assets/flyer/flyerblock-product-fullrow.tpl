<div class="flyer-item" style="margin: 0;min-width:960px;max-width:960px;">
    <div class="flyer-title" style="min-width:100%;max-width:100%;">{productname}</div>
    <div class="flyer-img" style="max-width: 400px;"><img alt="{productname}" src="{productimage}" />
    </div>
    <div class="flyer-desc" style="max-width: 500px;">
        {productdesc}
        <dl>
            {productproperties}
        </dl>
    </div>
    <div class="flyer-price-bottom" style="float: right;">
        <div class="flyer-price-row-bottom">
            <div class="flyer-price-text">{productpricetext}</div>
            <div class="flyer-price">${productprice}</div>
            <div class="flyer-price-atc">{productatc}</div>
        </div>
    </div>
</div>
