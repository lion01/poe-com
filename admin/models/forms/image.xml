<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_poecom/models/rules">
    <fieldset name="details" label="COM_POECOM_IMAGE_DETAILS">
    <field
        name="id"
        type="hidden"
    />
     <field
        name="product_id"
        type="productlist"
        label="COM_POECOM_OPTION_PRODUCT"
        description="COM_POECOM_OPTION_PRODUCT_D"
        class="inputbox"
        required="true"
        default=""
        onchange="updateImageLink()"
    />
    <field
        name="type"
        type="list"
        label="COM_POECOM_IMAGE_TYPE"
        description="COM_POECOM_IMAGE_TYPE_D"
        class="inputbox"
        required="true"
        default="0"
    >
        <option value="1">COM_POECOM_S_IMAGE_TYPE_1</option>
        <option value="2">COM_POECOM_S_IMAGE_TYPE_2</option>
    </field>
    <field
        name="related_image"
        type="imagemodal"
        label="COM_POECOM_RELATED_IMAGE"
        description="COM_POECOM_RELATED_IMAGE_D"
        class="inputbox"
        required="false"
        default=""
    />
    <field
        name="src"
        type="media"
        label="COM_POECOM_IMAGE_SRC"
        description="COM_POECOM_IMAGE_SRC_D"
        class="inputbox"
        required="true"
        size="80"
        default=""
    />
    <field
        name="alt"
        type="text"
        label="COM_POECOM_IMAGE_ALT"
        description="COM_POECOM_IMAGE_ALT_D"
        class="inputbox"
        required="true"
        size="80"
        default=""
    />
    <field
        name="caption"
        type="text"
        label="COM_POECOM_IMAGE_CAPTION"
        description="COM_POECOM_IMAGE_CAPTION_D"
        class="inputbox"
        required="true"
        size="80"
        default=""
    />
    <field
        name="width"
        type="text"
        label="COM_POECOM_IMAGE_WIDTH"
        description="COM_POECOM_IMAGE_WIDTH_D"
        size="5"
        class="inputbox"
        required="true"
        default=""
    />
    <field
        name="height"
        type="text"
        label="COM_POECOM_IMAGE_HEIGHT"
        description="COM_POECOM_IMAGE_HEIGHT_D"
        size="5"
        class="inputbox"
        required="true"
        default=""
    />
    <field
        name="sort_order"
        type="text"
        label="COM_POECOM_IMAGE_SORT"
        description="COM_POECOM_IMAGE_SORT_D"
        size="5"
        class="inputbox"
        required="true"
        default=""
    />
    <field
        name="published"
        type="radio" 
        label ="COM_POECOM_H_IMAGE_PUB"
        description="" 
        class="inputbox"
        required="true"
        default="1"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>
    
    </fieldset>
</form>
