<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_poecom/models/rules">
    <fieldset name="details" label="COM_POECOM_LOCATION_DETAILS">
        <field
            name="name"
            type="text"
            label="COM_POECOM_LOCATION_NAME"
            description="COM_POECOM_LOCATION_NAME_D"
            size="40"
            class="inputbox"
            required="true"
            default=""
        />
        <field
            name="google_map_address"
            type="text"
            label="COM_POECOM_LOCATION_GOOGLE_MAP_ADDR"
            description="COM_POECOM_LOCATION_GOOGLE_MAP_ADDR_D"
            size="100"
            class="inputbox"
            default=""
        />
        <field
            name="latitude"
            type="text"
            label="COM_POECOM_LOCATION_LATITUDE"
            description="COM_POECOM_LOCATION_LATITUDE_D"
            size="20"
            class="inputbox"
            default=""
        />
        <field
            name="longitude"
            type="text"
            label="COM_POECOM_LOCATION_LONGITUDE"
            description=""
            size="20"
            class="inputbox"
            default=""
        />
        <field
            name="street1"
            type="text"
            label="COM_POECOM_LOCATION_STREET1"
            description=""
            size="40"
            class="inputbox"
            required="true"
            default=""
        />
        <field
            name="street2"
            type="text"
            label="COM_POECOM_LOCATION_STREET2"
            description=""
            size="40"
            class="inputbox"
            default=""
        />
        <field
            name="city"
            type="text"
            label="COM_POECOM_LOCATION_CITY"
            description=""
            size="40"
            class="inputbox"
            required="true"
            default=""
        />
        <field
            name="country_id"
            type="countrylist"
            label="COM_POECOM_LOCATION_COUNTRY"
            description=""
            enabled="1"
            onchange="updateRegions('BT')"
            class="inputbox"
            required="true"
            default="38"
            allowedonly="0"
        />
        <field
            name="region_id"
            type="regionlist"
            label="COM_POECOM_LOCATION_REGION"
            description=""
            countryid="38"
            class="inputbox"
            required="true"
            default="0"
        />
        <field
            name="postal_code"
            type="text"
            label="COM_POECOM_LOCATION_POSTAL_CODE"
            description=""
            class="inputbox"
            required="true"
            default=""
        />
        <field
            name="telephone1"
            type="text"
            label="COM_POECOM_LOCATION_TELEPHONE1"
            description=""
            class="inputbox"
            required="true"
            default=""
        />
        <field
            name="telephone2"
            type="text"
            label="COM_POECOM_LOCATION_TELEPHONE2"
            description=""
            class="inputbox"
            default=""
        />
        <field
            name="email"
            type="email"
            label="COM_POECOM_LOCATION_EMAIL"
            description="COM_POECOM_LOCATION_EMAIL_D"
            class="inputbox"
            default=""
            size="60"
            required="true"
        />
        <field
            name="enabled"
            type="list"
            label="COM_POECOM_LOCATION_ENABLED"
            description="COM_POECOM_LOCATION_ENABLED_D"
            default="1"
        >
            <option value="0">JNo</option>
            <option value="1">JYes</option>
        </field>
    </fieldset>
    <fieldset name="hidden">
        <field name="id" type="hidden" />
    </fieldset>   
</form>
