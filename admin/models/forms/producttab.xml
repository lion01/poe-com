<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_poecom/models/rules">
  <fieldset name="details" label="COM_POECOM_TAB_DETAILS">
        <field
            name="product_id"
            type="productlist"
            label="COM_POECOM_OPTION_PRODUCT"
            description="COM_POECOM_OPTION_PRODUCT_D"
            class="inputbox"
            required="true"
            default=""
        />
        <field
            name="label"
            type="text"
            label="COM_POECOM_TAB_LABEL"
            description="COM_POECOM_TAB_LABEL_D"
            size="40"
            class="inputbox"
            required="true"
            default=""
        />
        <field
             name="ordering"
             type="text"
             label="COM_POECOM_ORDERING"
             description="COM_POECOM_ORDERING_D"
             class="inputbox"
         />
         <field
            name="published"
            type="list"
            label="COM_POECOM_TAB_PUB"
            description="COM_POECOM_TAB_PUB_D"
            default="1"
         >
             <option value="0">JNo</option>
             <option value="1">JYes</option>
         </field>
         <field 
            name="content"
            type="editor"
            label="COM_POECOM_TAB_CONTENT"
            description="COM_POECOM_TAB_CONTENT_D"
            class="inputbox"
            filter="safehtml" 
            required="true"
        />
    </fieldset>
        <fieldset name="hidden">
            <field name="id" type="hidden" />
        </fieldset>
</form>
