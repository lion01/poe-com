<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_poecom/models/rules">

  <fieldset name="details" label="COM_POECOM_PAYMENT_DETAILS">
        <field
            name="id"
            type="hidden"
        />
        <field
            name="transaction_number"
            type="text"
            label="COM_POECOM_PAYMENT_NUMBER"
            description="COM_POECOM_PAYMENT_NUMBER_D"
            size="40"
            class="inputbox"
            
            readonly="true"
            default=""
        />
        <field
            name="type_id"
            type="paytransactiontypelist"
            label="COM_POECOM_PAYMENT_TYPE"
            description="COM_POECOM_PAYMENT_TYPE_D"
            class="inputbox"
            
            readonly="true"
	    default="1"
        />
        <field
            name="amount"
            type="text"
            label="COM_POECOM_PAYMENT_AMOUNT"
            description="COM_POECOM_PAYMENT_AMOUNT_D"
            class="inputbox"
            
            readonly="true"
	    default=""
        />
        <field
            name="pay_method_id"
            type="paymethodlist"
            label="COM_POECOM_PAYMENT_METHOD"
            description="COM_POECOM_PAYMENT_METHOD_D"
            class="inputbox"
            required="true"
            readonly="true"
	    default=""
        />
        <field 
            name="rfq_id" 
            type="hidden" 
            class="inputbox"
            required="true"
            default=""
        />
        <field 
            name="rfq_number" 
            type="text" 
            label="COM_POECOM_PAYMENT_RFQ" 
            description="COM_POECOM_PAYMENT_RFQ_D"
            size="40"
            class="inputbox"
            required="false"
            readonly="true"
            default=""
        />
        <field
            name="order_id"
            type="text"
            label="COM_POECOM_PAYMENT_ORDERID"
            description="COM_POECOM_PAYMENT_ORDERID_D"
            size="20"
            class="inputbox"
            required="true"
            default="0"
        />
        <field
            name="status_id"
            type="paytransactionstatuslist"
            label="COM_POECOM_PAYMENT_STATUS"
            description="COM_POECOM_PAYMENT_STATUS_D"
            class="inputbox"
            required="true"
            readonly="true"
            default="0"
        />
        <field
            name="transaction"
            type="hidden"
            class="inputbox"
            required="true"
            default=""
        />
        <field
            name="txn_display"
            type="textarea"
            col="80"
            rows="30"
            label="COM_POECOM_PAYMENT_TRANSACTION"
            description="COM_POECOM_PAYMENT_TRANSACTION_D"
            class="inputbox"
            default=""
        />
	</fieldset>
</form>
